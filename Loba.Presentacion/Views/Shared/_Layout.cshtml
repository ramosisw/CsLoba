<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
    <!-- Scripts.Render("~/bundles/modernizr") -->
</head>
<body>
    <!-- .navbar-FINxed-top -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container col-lg-offset-0">
            <!-- contenedor para colapsador de menu en vista movil -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- logo empresa-->
                <a href="~/Home/Index" class="navbar-brand">
                    <img src="~/Images/yahoo_answers.png">
                </a>
                <!-- FIN logo empresa -->
            </div>
            <!-- colapsador para la vista movil/tablet-->
            <div class="collapse navbar-collapse">
                <!-- formulario busqueda .navbar -->
                <form class="navbar-form navbar-left" action="~/Home/Index" method="get" role="search" style="width: 60%;">
                    <div class="form-group" style="width: 50%;">
                        <input type="text" class="form-control" name="q" placeholder="Buscar una pregunta...">
                    </div>
                    <button type="submit" class="btn btn-primary">Buscar en Respuestas</button>
                    <!--button type="submit" class="btn btn-info">Submit</!--button-->
                </form>
                <!-- FIN formulario busqueda .navbar -->
                <!-- navegacion derecha de la barra de menu -->
                @Html.Action("_Nav_Menu_Der", "Home")
                <!-- FIN navegacion derecha de la barra de menu-->
            </div>
            <!-- FIN colapsador para la vista movil/tablet-->
        </div>
    </nav>
    <!-- /.navbar-FINxed-top -->
    <div class="container col-lg-offset-0 col-md-offset-0">
        <!-- menu-izq -->
        @Html.Action("_Menu_izq", "Home")
        <!-- FIN menu-izq -->
        @RenderBody()
    </div>
    <!-- ****** SCRIPTS-->
    <script type="text/javascript" src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/script.js"></script>
    <!--Scripts.Render("~/bundles/jquery")-->
    <!--RenderSection("scripts", required: false)-->
</body>
</html>
