        <li><a href="~/Home/Index">Pagina Principal</a></li>
        <li><a href="~/Home/Index">Todas las Categorias</a></li>
        <li class="nav-divider"></li>
        @foreach (var item in Model.obtenerCategorias()) {
            <li><a href="~/Home/Index?categoria=@item.Id">@item.Nombre</a></li>
        }
        @if (Model.obtenerSubCategorias().Count()>0) {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mas <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @foreach (var item in Model.obtenerSubCategorias()) {
                        <li><a href="~/Home/Index?categoria=@item.Id">@item.Nombre</a></li>
                    }
                </ul>
            </li>
        }
